{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "target": "es6",
    "sourceMap": true,
    "moduleResolution": "node",
    "module": "CommonJS",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "noImplicitUseStrict": true,
  },
  "include": ["./src/**/*", "cli.ts"]
}
